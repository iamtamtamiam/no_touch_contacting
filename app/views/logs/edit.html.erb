<%= render partial: "layouts/errors", locals: {object: @log} %>
Edit this Log

<%= form_for (@log) do |f| %>

    <%= f.label :date %>
    <%= f.datetime_field :date%>
    <br>
    
    <% @contacts.each do |contact| %>
        <input type="radio" name="log[contact_id]" id="<%= contact.id %>" value="<%= contact.id %>" <%= "checked" if contact.id==@log.contact_id %>>
        <%= contact.name %><br>
    <% end %>

    <%= f.label :communication_type %>
    <%= f.text_field :communication_type%>
    <br>

    <%= f.label :answered %>
    <%= f.check_box :answered%>
    <br>

    <%= f.label :log_notes, "additional notes" %>
    <%= f.text_area :log_notes%>
    <br>


    <%= f.submit "Edit This Log"%>

<%end%>
