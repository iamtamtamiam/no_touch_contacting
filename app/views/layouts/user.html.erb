<!DOCTYPE html>
<html>
  <head>
    <title>NoTouchContacting</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
     <nav class="site-header">
       <div class="container d-flex flex-column flex-md-row justify-content-between">
          <% if logged_in? %>
            <%= link_to "My Homepage", employee_path(current_employee) %>
            <%= link_to "Add New Contact", new_contact_path %>
            <%= link_to  "All Contacts", contacts_path %>
            <%= link_to "Add New Log", new_log_path %>
            <%= link_to  "All Logs", logs_path %>
            <%= link_to  "Logout", logout_path, method: "delete" %>
          <% else %>

            <%= link_to  "Sign Up", signup_path %>
            <%= link_to "Log In", login_path %>
            <%= link_to  "Log In/Sign Up Using Google", '/auth/google_oauth2' %>
          <%end%>
        </div>
      </nav>


 
   
        <div id="content">

            <%= yield %>
        </div><!-- #content-## -->



    
    

      
  </body>
</html>
