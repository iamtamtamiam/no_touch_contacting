
<!DOCTYPE html>
<html>
  <head>
    <title>NoTouchContacting</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
     <nav class="site-header">
       <div class="container d-flex flex-column flex-md-row justify-content-between">
          <% if logged_in? %>
            <%= link_to  "Logout", logout_path, method: "delete" %> |
            <%= link_to "Add New Contact", new_contact_path %> |
            <%= link_to "My Homepage", employee_path(current_employee) %>
            <%= link_to "Add Log", new_log_path %>
            <%= link_to  "All Logs", logs_path %>
          <% else %>

            <%= link_to  "Sign Up", signup_path %>
            <%= link_to "Log In", login_path %>
            <%= link_to  "Log In/Sign Up Using Google", '/auth/google_oauth2' %>
          <%end%>
        </div>
      </nav>



    <!--  for welcome -->
  <div class="bg-dark position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center text-white bg-light">
  <div class="col-md-5 p-lg-5 mx-auto my-5">
    <!--<h1 class="display-4 font-weight-normal">Punny headline</h1>-->
    <!--<p class="lead font-weight-normal">And an even wittier subheadin.</p>-->
    <!--<a class="btn btn-outline-secondary" href="#">Coming soon</a>-->
    <%= yield %>
  </div>
  <div class="bg-light shadow-sm mx-auto" style="width: 20%; height: 350px; border-radius: 21px 21px 0 0;"></div>
  <div class="product-device shadow-sm d-none d-md-block"></div>
  <div class="product-device product-device-2 shadow-sm d-none d-md-block"></div>
</div>
    

      
  </body>
</html>